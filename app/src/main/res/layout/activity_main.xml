<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile network"
        android:id="@+id/mobileNetCheckBox"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/mobileDNS1"
        android:layout_below="@+id/mobileNetCheckBox"
        android:layout_alignLeft="@+id/mobileNetCheckBox"
        android:layout_alignStart="@+id/mobileNetCheckBox"
        android:hint="DNS1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/mobileDNS2"
        android:layout_below="@+id/mobileDNS1"
        android:hint="DNS2" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wi-Fi network"
        android:id="@+id/wifiNetCheckBox"
        android:layout_below="@+id/mobileDNS2"
        android:layout_alignLeft="@+id/mobileDNS2"
        android:layout_alignStart="@+id/mobileDNS2" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use same DNS"
        android:id="@+id/sameDNSswitch"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/mobileDNS2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/wifiDNS1"
        android:layout_below="@+id/wifiNetCheckBox"
        android:layout_alignRight="@+id/mobileDNS2"
        android:layout_alignEnd="@+id/mobileDNS2"
        android:inputType="numberDecimal"
        android:hint="DNS1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/wifiDNS2"
        android:layout_below="@+id/wifiDNS1"
        android:layout_alignLeft="@+id/wifiDNS1"
        android:layout_alignStart="@+id/wifiDNS1"
        android:digits="1234567890."
        android:hint="DNS2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set DNS now"
        android:id="@+id/setButton"
        android:onClick="setButtonOnClick"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/wifiDNS2"
        android:layout_alignStart="@+id/wifiDNS2"
        android:layout_alignRight="@+id/sameDNSswitch"
        android:layout_alignEnd="@+id/sameDNSswitch" />

</RelativeLayout>
